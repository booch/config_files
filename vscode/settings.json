/* This file allows comments and trailing commas. Yay! */
{
    "$schema": "vscode://schemas/settings/user",

    /// General
    "files.defaultLanguage": "markdown",
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editor.pinnedTabsOnSeparateRow": true,
    "editor.accessibilitySupport": "off",
    "editor.scrollbar.scrollByPage": true,
    "redhat.telemetry.enabled": false,
    "vsicons.dontShowNewVersionMessage": true,
    "editor.wrappingStrategy": "advanced",

    /// Display
    "window.zoomLevel": 2, // TODO: Change this to "always" when that becomes available.
    "workbench.colorTheme": "Default Light+",
    "workbench.iconTheme": "vscode-icons",
    "editor.fontSize": 16,
    "editor.fontFamily": "'Fira Code', Menlo, Monaco, 'Courier New', monospace",
    "breadcrumbs.enabled": true,
    "workbench.tree.indent": 20, // More indentation in Explorer tree view.
    "editor.renderControlCharacters": true, // Show control characters (ESC: , BEL: , BS: , etc).
    "editor.rulers": [
        { "column": 80, "color": "#dddddd" },
        { "column": 100, "color": "#888888" },
        { "column": 120, "color": "#ff0000" }
    ],
    "editor.bracketPairColorization.enabled": true,
    "editor.minimap.enabled": false,
    "editor.minimap.renderCharacters": false,

    /// Formatting
    "editor.formatOnType": true,
    "editor.formatOnPaste": true,
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "files.insertFinalNewline": true,
    "prettier.printWidth": 120,
    "prettier.tabWidth": 4,

    // Keyword highlighting
    // NOTE: TODO, FIXME, and BUG are included by default, but will revert to white on black if not specified here.
    "todohighlight.isEnable": true,
    "todohighlight.keywords": [
        {
            "text": "TODO",
            "color": "white",
            "backgroundColor": "orange",
            "after": true,
            "before": true,
            "lineDecoration": "none"
        },
        {
            "text": "FIXME",
            "color": "white",
            "backgroundColor": "crimson"
        },
        {
            "text": "NOTE",
            "color": "white",
            "backgroundColor": "darkMagenta"
        },
        {
            "text": "QUESTION",
            "color": "white",
            "backgroundColor": "blue"
        },
        {
            "text": "ANSWER",
            "color": "white",
            "backgroundColor": "green"
        },
        {
            "text": "PROBLEM",
            "color": "white",
            "backgroundColor": "orangeRed"
        },
        {
            "text": "SOLUTION",
            "color": "white",
            "backgroundColor": "green"
        },
        {
            "text": "ACTION ITEM",
            "color": "white",
            "backgroundColor": "darkCyan"
        },
        {
            "text": "HELP",
            "color": "white",
            "backgroundColor": "crimson"
        },
        {
            "text": "STATUS",
            "color": "white",
            "backgroundColor": "darkGray"
        },
        {
            "text": "WARNING",
            "color": "orange",
            "backgroundColor": "black"
        },
        {
            "text": "BUG",
            "color": "grey",
            "backgroundColor": "orange"
        },
        {
            "text": "FIX",
            "color": "green",
            "backgroundColor": "lightGray"
        },
        {
            "text": "WIP",
            "color": "green",
            "backgroundColor": "lightGray"
        }
        // TODO: Figure out how to add BUGFIX in addition to BUG and FIX.
    ],

    "files.trimTrailingWhitespace": true,
    "editor.linkedEditing": true,
    "ruby.format": "rubocop",
    "[ruby]": {
        "editor.tabSize": 2,
        "editor.defaultFormatter": "Shopify.ruby-lsp", // Use the Ruby LSP as the default formatter
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.insertSpaces": true, // Use spaces and not tabs for indentation
        "editor.semanticHighlighting.enabled": true // Enable semantic highlighting
    },
    "rubyLsp.rubyVersionManager": { "identifier": "mise" },
    "[markdown]": {
        "editor.wordWrapColumn": 80,
        "editor.wordWrap": "bounded",
        "editor.quickSuggestions": {
            "comments": false,
            "strings": false,
            "other": false
        }
    },
    "markdown.occurrencesHighlight.enabled": true,
    "markdownlint.config": {
        "extends": "/Users/booch/.markdownlint.yaml"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "prettier.printWidth": 120,
    "C_Cpp.default.cStandard": "c11",
    "C_Cpp.default.cppStandard": "c++20",
    "C_Cpp.experimentalFeatures": "enabled",
    "c-cpp-flylint.clang.pedantic": true,
    "prettier.tabWidth": 4,
    "editor.snippetSuggestions": "top", // Show snippets first, per https://www.roboleary.net/2021/08/23/vscode-snippets-are-not-aliases.html
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "editor.codeActionsOnSave": {},
    "editor.autoClosingBrackets": "always",
    "editor.autoSurround": "languageDefined",
    "editor.acceptSuggestionOnEnter": "off",
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "npm.keybindingsChangedWarningShown": true,
    "terminal.integrated.env.osx": {
    },
    "spellright.addToSystemDictionary": true,
    "spellright.documentTypes": [
        "markdown",
        "latex",
        "plaintext"
    ],
    "editor.accessibilitySupport": "off"
}
